<% include partials/header %>

<div class="ui main container">
	<form class="ui form" action="/home/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label> Title </label>
			<input type="text" name="blog[title]" placeholder="Enter Title" value="<%=blog.title%>">
		</div>
		<div class="field">
			<label> Image </label>
			<input type="text" name="blog[image]" placeholder="Enter Image" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label> Body </label>
			<textarea name="blog[body]" placeholder="Enter Body"><%-blog.body%></textarea>
		</div>
		<button class="ui button" type="submit">Submit</button>
	</form>
</div>

<% include partials/footer %>